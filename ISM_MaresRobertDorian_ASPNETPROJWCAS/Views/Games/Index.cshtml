@model IEnumerable<ISM_MaresRobertDorian_ASPNETPROJWCAS.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Games</h1>

@if (User.IsInRole("ADMIN_ROLE"))
{
    <p>
        <a asp-action="Create">Add New Game</a>
    </p> 
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameSize)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.ImgString)
            </td>*@
            <td>
                <img src="@item.ImgString" style="width:100%; max-width:100px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @if (User.IsInRole("ADMIN_ROLE"))
                {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 

            </td>
        </tr>
}
    </tbody>
</table>
